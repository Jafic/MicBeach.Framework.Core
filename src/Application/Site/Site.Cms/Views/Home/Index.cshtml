
@{
    Layout = null;
}
@using MicBeach.Web.Security.Authentication
@using Site.Cms.Helper
@{ 
    AuthenticationUser<long> loginUser = UserHelper.GetLoginUser()??new AuthenticationUser<long>();
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>管理系统</title>
    <environment>
        <link href="~/css/bootstrap.css" rel="stylesheet" />
        <link href="~/css/customerbootstrap.css" rel="stylesheet" />

        <link href="~/css/common.css" rel="stylesheet" />
        <link href="~/css/margin.css" rel="stylesheet" />
        <link href="~/css/padding.css" rel="stylesheet" />
        <link href="~/css/position.css" rel="stylesheet" />
        <link href="~/css/wh.css" rel="stylesheet" />
        <link href="~/css/border.css" rel="stylesheet" />

        <link href="~/css/iconfont.css" rel="stylesheet" />
        <link href="~/css/index.css" rel="stylesheet" />
    </environment>
</head>
<body>
    <!--bg-->
    <div id="cms-bg" class="ps-absolute wp-100 hp-100 over-hidden zindex-n-10">
        <img src="~/images/loginbg01.jpg" class="wp-100 hp-100" />
    </div>
    <!--head-->
    <div id="cms-head" class="h-50 wp-100 container">
        <div class="row hp-100">
            <div class="column col-xs-0 col-sm-6 col-md-6 col-lg-4 hidden-xs hp-100 "></div>
            <div class="column col-xs-0 col-sm-0 col-md-0 col-lg-5 hidden-xs hidden-sm hidden-md hp-100"></div>
            <div class="column col-xs-12 col-sm-6 col-md-6 col-lg-3 hp-100 lh-50 txt-right">
                <div class="dropdown">
                    <button class="btn btn-default dropdown-toggle clr-fff fs-12 bd-w-0 bd-rad-0" type="button" id="head-member-btn" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                        <i class="glyphicon glyphicon-user"></i> @loginUser.Name<span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu left-335 top-41 mg-0 bd-rad-0" aria-labelledby="dropdownMenu1">
                        <li><a href="javascript:void(0)" id="modifypwd_btn"><i class="glyphicon glyphicon-lock"></i> 修改密码</a></li>
                        <li><a href="@Url.Action("Login","Home")"><i class="glyphicon glyphicon-off"></i> 退出</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div id="cms-body" class="container wp-100 pd-0">
        <div class="row hp-100 pd-0 mg-0">
            <div class="hp-100 w-100 pd-0 fl" id="body-nav-col">
                <div id="nav-left" class="w-100 hp-100 ps-relative fl">
                    <div id="nav-roll-top-btn" class="nav-roll-btn ps-absolute top-0 wp-100 lh-20 txt-center clr-fff zindex-10"><i class="glyphicon glyphicon-chevron-up"></i></div>
                    <div id="nav-menucon">
                        <ul>
                            <li>
                                <div class="mico mymenus"></div>
                                <div class="menuname">账号/组织</div>
                                <div class="menu_list">
                                    <div class="menul_inner">
                                        <h3 class="menugroup_title fs-12 mg-0 pd-5">账户/角色</h3>
                                        <div class="menu_listcon">
                                            <ul class="list-group">
                                                    <li class="list-group-item pdl-10 pdt-5 pdb-5 pdr-0 fs-12"><a href="@Url.Action("RoleList", "Sys")">角色管理</a></li>
                                                    <li class="list-group-item pdl-10 pdt-5 pdb-5 pdr-0 fs-12"><a href="@Url.Action("AdminUserList", "Sys")">管理账号</a></li>
                                            </ul>
                                        </div>
                                        <h3 class="menugroup_title fs-12 mg-0 pd-5">权限/授权</h3>
                                        <div class="menu_listcon">
                                            <ul class="list-group">
                                                <li class="list-group-item pdl-10 pdt-5 pdb-5 pdr-0 fs-12"><a href="@Url.Action("AuthorityGroupList", "Sys")">权限管理</a></li>
                                                <li class="list-group-item pdl-10 pdt-5 pdb-5 pdr-0 fs-12"><a href="@Url.Action("AuthorityOperationGroupList", "Sys")">授权操作</a></li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </li>
                        </ul>
                    </div>
                    <div id="nav-roll-bottom-btn" class="nav-roll-btn ps-absolute bottom-0 wp-100 bd-bw-0 lh-20 txt-center clr-fff zindex-10"><i class="glyphicon glyphicon-chevron-down"></i></div>
                </div>
                <div id="nav-right" class="w-90 hp-100 over-hidden hide fl bd-r-ddd bd-rw-1 bd-r-solid">
                </div>
            </div>
            <div class="hp-100 pd-0 fr" id="body-content-col">
                <div id="cbr-head">
                    <div id="h-rbtncon">
                        <button class="btn btn-blue btn-xs fc_3" type="button" id="ref_curpagebtn" title="刷新"><i class="glyphicon glyphicon-refresh"></i></button>
                        <button class="btn-xs btn btn-danger fc_3" id="close_otpagebtn" type="button" title="关闭其它"><i class="glyphicon glyphicon-remove-circle"></i></button>
                        <button class="btn-xs btn btn-success fc_3 rbtn" type="button" title="全屏" id="full_screebtn"><i class="glyphicon glyphicon-fullscreen"></i></button>
                    </div>
                    <div id="h-tabcon">
                        <div class="tab-lrbtn left-btn"></div>
                        <div class="tab-lrbtn right-btn">
                        </div>
                        <ul></ul>
                    </div>
                </div>
                <div id="cbr-pagecon">
                    <div id="page_innercon">
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="loading_con">
        <div id="loading_bg"></div>
        <div id="loading_img"></div>
    </div>
    <environment>
        <script src="~/js/jquery.js"></script>
        <script src="~/js/bootstrap.js"></script>
        <script src="~/js/jquery-ui.js"></script>
        <script src="~/js/jquery.mousewheel.js"></script>
        <script src="~/js/tool.js"></script>
        <script src="~/js/index.js"></script>
        <script src="~/js/jquery.slimscroll.js"></script>
    </environment>
    <script type="text/javascript">
        var initPageUrls = [];//[{ url: "@Url.Action("Main", "Home")", tit: "主页", sico: true }, { url: "@Url.Action("Main", "Home")", tit: "主页", sico: true }];
        $(function () {
            //修改密码
            $("#modifypwd_btn").click(function () {
                OpenNewTabPage('@Url.Action("ModifyPassword","Sys")', '修改密码', true);
            });
            $(".menugroup_title").append(' <i class="glyphicon glyphicon-chevron-right fr"></i><i class="glyphicon glyphicon-chevron-down fr"></i>');
        })

    </script>
</body>
</html>
